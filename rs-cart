pipeline {

agents any 
   stages {
      stage(Clone repo) {
                    steps{
                            git "https://github.com/Mounicavl/jenkin.git"
                          }
                      }
      stage(NPM Install) {
                    steps {
                            sh label: '', script: '''
                            npm install
                              '''
                          }
                        }
       stage(Archeive) {
                  steps {
                            sh 'tar -czf cart.tgz node_modules cart.js package.json'
                        }
                      }
            }
  }
 
